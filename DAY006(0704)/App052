using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace calulator
{
    //사칙연산을 하는 계산기를 만든다.
    class Caluculator
    {
        /*1.멤버변수 
         * 2.생성자 - 디폴트 생성자는 안만들면 자동으로 만들어짐, 단, 인자가 있는 생성자가 1개라도 있으면 자동으로 만들어지지 않는다.
         * 3.멤버 메소드
         */
        private string x; //멤버변수

        public Caluculator() //생성자
        { 
        }
        public Caluculator(string _x) 
        {
            this.x = _x;    //this. 생략가능
        }     
    }
    internal class Program
    {
        static void Main(string[] args)
        {
            Caluculator cal1 = new Caluculator();
            Caluculator cal2 = new Caluculator("홍길동");
        }
    }
}
