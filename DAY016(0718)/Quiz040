using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace quiz1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            while (true)
            {
                Console.Write("입력 : ");
                string n = Console.ReadLine();
                if (n == "q")
                {
                    Console.WriteLine("프로그램이 종료되었습니다.");
                    Environment.Exit(0);
                }
            }
        }
    }
}
